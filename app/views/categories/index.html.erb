<div class="flex flex-col justify-center  h-full">
  <h2 class="bg-bluish text-white text-center px-4 py-3">categories</h2>
  <div class="flex-1 overflow-y-scroll">
    <div class="flex flex-col justify-center">
      <% @categories.each do |category| %>
        <div class="mb-4">
          <h3><%= category.name %></h3>
          <img class="w-8 h-8" src="<%= category.icon %>"/>
          <p>$<%= category.expenses.sum(:amount) %></p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-center text-white  ">
    <%= link_to "New Category", new_category_path, class:"bg-greenish px-4 py-3 w-full block" %>
  </div>
</div>
