<div class="flex flex-col justify-center  h-full">
  <div class="bg-bluish flex justify-between items-center text-white px-5 py-6">
      <% if user_signed_in? %>
       <%= button_to destroy_user_session_path, method: :delete do %>
          <%= image_tag("https://img.icons8.com/ios/50/import.png", alt: "exit", width: 20, height: 20) %>
        <% end %>
      <% end %>
      <h3> Categories </h3>
      <h3>  </h3>
  </div>
    <div class="flex justify-between items-center  border-b border-slate-200 px-2 py-2">
      <p>Total</p>
      <h3 class="font-bold">$<%= @total_amount %></h3>
    </div>
  <div class="flex-1 overflow-y-scroll no-scrollbar">
    <div class="flex flex-col justify-center">
      <% @categories.each do |category| %>
        <%= link_to category_path(category.id), class:"my-3 px-2 flex justify-between items-center" do %>
          <img class="w-20 h-20" src="<%= category.icon %>"/>
          <h3 class="flex-1 capitalize text-gray-500 ml-2"><%= category.name %></h3>
          <p class="font-bold">$<%= category.expenses.sum(:amount) %></p>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="text-center text-white  ">
    <div class="bg-greenish p-4">
    <%= link_to "New Category", new_category_path, class:" border-2 rounded p-3 w-full block" %>
    </div>
  </div>
</div>
