<h2 class="text-2xl text-center font-bold my-4">Log in</h2>

<%= render 'shared/notice'%>
<div class="flex flex-col justify-center px-2">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-4" }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Your Email" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me, class: "form-checkbox h-4 w-4 text-indigo-600" %>
        <%= f.label :remember_me, class: "text-gray-700 ml-2" %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.submit "Log in", class: "bg-[#5fb523] w-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
