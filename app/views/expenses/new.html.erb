<div class="bg-[#3778c2] flex justify-between items-center text-white px-2 py-6">
       <%= link_to :back do %>
          <%= image_tag("https://img.icons8.com/ios/50/circled-chevron-left.png", alt: "exit", width: 20, height: 20) %>
        <% end %>
      <h3> Add Expense </h3>
      <h3>  </h3>
</div>
<%= render '/shared/notice' %>
<div class="p-4 my-5 bg-white">
<%= form_with model: @expense, url: category_expenses_path(category_id: params[:category_id]), local: true  do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, autofocus: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="mb-4">
    <%= form.label :amount, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.number_field :amount, autofocus: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4 flex flex-col gap-2">
    <%= form.label :icon,"Select Related Categories", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.check_box :icon, { multiple: true, class: "hidden" } %>

      <%= label_tag "car_icon", class: "inline-flex items-center cursor-pointer" do %>
        <%= check_box_tag "expense[icon][]", "https://img.icons8.com/2266EE/color/car", false, class: "form-checkbox h-5 w-5 text-indigo-600" %>
        <%= image_tag("https://img.icons8.com/2266EE/color/car", alt: "Car", width: 20, height: 20, class: "mx-2") %>
        Car
      <% end %>
      
      <%= form.check_box :icon, { multiple: true, class: "hidden" } %>
      <%= label_tag "sport_icon", class: "inline-flex items-center cursor-pointer" do %>
        <%= check_box_tag "expense[icon][]", "https://img.icons8.com/2266EE/color/sport", false, class: "form-checkbox h-5 w-5 text-indigo-600" %>
        <%= image_tag("https://img.icons8.com/2266EE/color/sport", alt: "Sport", width: 20, height: 20, class: "mx-2") %>
        Sport
      <% end %>
      
      <%= form.check_box :icon, { multiple: true, class: "hidden" } %>
      <%= label_tag "makeup_icon", class: "inline-flex items-center cursor-pointer" do %>
        <%= check_box_tag "expense[icon][]", "https://img.icons8.com/?size=512&id=FrWKbpynUJrB&format=png", false, class: "form-checkbox h-5 w-5 text-indigo-600" %>
        <%= image_tag("https://img.icons8.com/?size=512&id=FrWKbpynUJrB&format=png", alt: "Make-up", width: 20, height: 20, class: "mx-2") %>
        Groceries
      <% end %>
      <%= form.check_box :icon, { multiple: true, class: "hidden" } %>
      <%= label_tag "pet_icon", class: "inline-flex items-center cursor-pointer" do %>
        <%= check_box_tag "expense[icon][]", "https://img.icons8.com/2266EE/color/dog", false, class: "form-checkbox h-5 w-5 text-indigo-600" %>
        <%= image_tag("https://img.icons8.com/2266EE/color/dog", alt: "Make-up", width: 20, height: 20, class: "mx-2") %>
        Pet
      <% end %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit 'Create', class: "bg-[#5fb523] text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full cursor-pointer" %>
  </div>
<% end %>
